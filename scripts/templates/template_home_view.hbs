<div class="resume demo">
	<div class="basic-info">
	{{#each segment}}
		<div id="{{segment}}" class="col-xs-12  text-center segment {{bgColor}}">
			<div class="text col-xs-12 text-center">
				<h3> {{text1}} </h3>
			</div>
			<div class="photo col-xs-12">
				<img class="img-responsive img-circle center-block" src="{{image}}"></img>
			</div>
			<div class="text col-xs-12 text-center">
				<h3> {{text2}} </h3>
			</div>
			<span class="down-icon glyphicon glyphicon-chevron-down" data-next-segment="#{{nextSegment}}" aria-hidden="false"></span>
		</div>
	{{/each}}
	</div> {{!-- end of basic-info --}}
</div>